{
	"id": 17208467,
	"name": "[LLM Governance] High Latency Anomaly",
	"type": "query alert",
	"query": "avg(last_4h):anomalies(avg:llm.latency.ms{*}, 'basic', 2, direction='above', interval=60, alert_window='last_15m', count_default_zero='true') >= 1",
	"message": "LLM Latency is abnormally high: {{value}}ms\n   \n   ML-based anomaly detection triggered.\n   @louizabou@gmail.com \n   @incident-llm-latency",
	"tags": [],
	"options": {
		"thresholds": {
			"critical": 1,
			"critical_recovery": 0
		},
		"notify_audit": false,
		"require_full_window": false,
		"renotify_interval": 0,
		"threshold_windows": {
			"trigger_window": "last_15m",
			"recovery_window": "last_15m"
		},
		"include_tags": false,
		"on_missing_data": "default",
		"new_host_delay": 300
	},
	"priority": null,
	"draft_status": "published"
}